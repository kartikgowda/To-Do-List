<%- include('header') %>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box">
  <!-- ! For Each Loop -->
  <% newListItems.forEach(function(item){ %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= item._id %>"
        onchange="this.form.submit()"
      />
      <p><%= item.name %></p>
    </div>
    <input type="hidden" name="list" value="<%= listTitle %>" />
  </form>
  <% }) %>

  <form action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle %>">âž•</button>
  </form>
</div>

<%- include('footer') %>
